{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "declaration": true,
    "declarationDir": "./dist/types",
    "allowJs": true,
    "strict": false,
    "skipLibCheck": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "mfx": ["./lib/mfx"]
    }
  },
  "exclude": ["./tests/**"],
  "include": [
    "lib/*",
    "lib/**/*",
    "types/**/*",
    "node_modules/@types/wicg-file-system-access/*.d.ts",
    "node_modules/@types/dom-webcodecs/*.d.ts",
  ]
}
